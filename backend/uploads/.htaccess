# --- Security for uploads (hanya gambar) ---

# Blokir semua file berbahaya (script dsb)
<FilesMatch "\.(php|php3|php4|php5|phtml|pl|cgi|asp|aspx|js|sh)$">
    Require all denied
</FilesMatch>

# Hanya izinkan akses untuk gambar (jpg, jpeg, png, gif)
<FilesMatch "\.(jpg|jpeg|png|gif)$">
    Require all granted
</FilesMatch>

# Set MIME types untuk gambar
<IfModule mod_mime.c>
    AddType image/jpeg .jpg .jpeg
    AddType image/png .png
    AddType image/gif .gif
</IfModule>

# Prevent directory browsing
Options -Indexes

# Cache gambar 1 bulan
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpeg "access plus 1 month"
    ExpiresByType image/png "access plus 1 month"
    ExpiresByType image/gif "access plus 1 month"
</IfModule>
